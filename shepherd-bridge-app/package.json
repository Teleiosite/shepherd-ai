{
    "name": "shepherd-ai-bridge",
    "version": "1.0.0",
    "description": "Shepherd AI WhatsApp Bridge - Desktop Application",
    "main": "electron-main.js",
    "scripts": {
        "start": "electron .",
        "build:win": "electron-builder --win",
        "build:mac": "electron-builder --mac",
        "build:all": "electron-builder -mwl"
    },
    "build": {
        "appId": "com.shepherdai.bridge",
        "productName": "Shepherd AI Bridge",
        "win": {
            "target": "nsis"
        },
        "mac": {
            "target": "dmg"
        },
        "files": [
            "electron-main.js",
            "bridge-core.js",
            "preload.js",
            "ui/**/*",
            "node_modules/**/*",
            "package.json"
        ]
    },
    "dependencies": {
        "@wppconnect-team/wppconnect": "^1.30.0",
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "ws": "^8.14.2",
        "axios": "^1.6.0"
    },
    "devDependencies": {
        "electron": "^27.0.0",
        "electron-builder": "^24.6.4"
    },
    "author": "Shepherd AI",
    "license": "MIT"
}