{
    "buildCommand": "npm run build",
    "env": {
        "VITE_BACKEND_URL": "https://shepherd-ai-backend.onrender.com"
    },
    "build": {
        "env": {
            "VITE_BACKEND_URL": "https://shepherd-ai-backend.onrender.com"
        }
    },
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ]
}